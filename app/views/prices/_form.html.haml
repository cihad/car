= form_for @price do |f|
  - if @price.errors.any?
    #error_explanation
      %h2= "#{pluralize(@price.errors.count, "error")} prohibited this price from being saved:"
      %ul
        - @price.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :model
    = f.text_field :model
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :currency
    = f.text_field :currency
  .actions
    = f.submit 'Save'

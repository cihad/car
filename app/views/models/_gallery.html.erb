<div id="gallery" class="carousel slide mt-3" data-ride="carousel">
  <div class="carousel-inner">
    <% @model.images.each_with_index do |image, index| %>
      <div class="carousel-item <%= 'active' if index == 0 %>">
        <%= image_tag url_for(image), class: "d-block w-100" %>
      </div>
    <% end %>
  </div>
  <ol class="carousel-indicators">
    <% @model.images.each_with_index do |image, index| %>
      <li data-target="#gallery" data-slide-to="<%= index %>" class="<%= 'active' if index == 0 %>">
        <%= image_tag image.variant(resize: "60x60") %>
      </li>
    <% end %>
  </ol>
  <a class="carousel-control-prev" href="#gallery" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#gallery" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>